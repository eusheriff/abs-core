{
  "name": "abs-vscode",
  "displayName": "ABS Core Integration",
  "publisher": "oconnector",
  "description": "Integrate ABS Core Scanner directly into VS Code.",
  "author": "EngÂº Rodrigo Gomes <dev@oconnector.tech>",
  "license": "Apache-2.0",
  "version": "0.0.5",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eusheriff/abs-core.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abs.scanFile",
        "title": "ABS: Scan Current File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "abs-explorer",
          "title": "ABS Core",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "abs-explorer": [
        {
          "type": "webview",
          "id": "absSidebar",
          "name": "HOME"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
