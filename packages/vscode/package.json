{
  "name": "abs-vscode",
  "displayName": "ABS Core - Gatekeeper for IDEs",
  "publisher": "oconnector",
  "description": "Supervise AI Coding Agents (Cursor, Copilot, Windsurf, Cline) with governance and policy enforcement.",
  "author": "EngÂº Rodrigo Gomes <dev@oconnector.tech>",
  "license": "Apache-2.0",
  "version": "0.0.17",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eusheriff/abs-core.git"
  },
  "homepage": "https://abscore.app",
  "bugs": {
    "url": "https://github.com/eusheriff/abs-core/issues"
  },
  "keywords": [
    "ai",
    "governance",
    "security",
    "cursor",
    "copilot",
    "windsurf",
    "cline",
    "agent",
    "llm",
    "policy",
    "scanner",
    "gatekeeper"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abs.scanFile",
        "title": "ABS: Scan Current File",
        "icon": "$(shield)"
      },
      {
        "command": "abs.scanWorkspace",
        "title": "ABS: Scan Workspace"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "abs-explorer",
          "title": "ABS Core",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "abs-explorer": [
        {
          "type": "webview",
          "id": "absSidebar",
          "name": "Gatekeeper"
        }
      ]
    },
    "configuration": {
      "title": "ABS Core",
      "properties": {
        "abs.apiUrl": {
          "type": "string",
          "default": "https://api.abscore.app",
          "description": "ABS Core API endpoint URL"
        },
        "abs.apiKey": {
          "type": "string",
          "default": "sk-producer-v0",
          "description": "API Key for ABS Core (required for ingest)"
        },
        "abs.scanOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan files on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --allow-missing-repository",
    "publish:vscode": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2",
    "ovsx": "^0.8.0"
  }
}
